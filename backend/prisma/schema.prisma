
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  quantity    Int
  category    String
  supplierId  String?
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  sales       Sale[]    
  createdAt   DateTime @default(now())
}

model Supplier {
  id        String    @id @default(uuid())
  name      String
  email     String
  products  Product[]
}

model Sale {
   id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id]) 
  quantity  Int
  total     Float
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  STAFF
}
